@{
    Layout = "_LayoutUserManage";
    ViewData["Title"] = "个人数据";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>
            您的帐户包含您提供给我们的个人数据。此页允许您删除该数据。
        </p>
        <p>
            <strong class="text-danger">
                删除此数据将永久删除您的帐户，并且无法恢复。
            </strong>
        </p>
        <p>
            <a id="delete" asp-action="@nameof(UserController.DeletePersonalData)" class="btn btn-primary">删除</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}