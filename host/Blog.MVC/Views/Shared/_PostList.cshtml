@model X.PagedList.StaticPagedList<PostViewModel>

@if (Model.Count == 0)
{
    <div class="alert alert-info">
        No Posts Found
    </div>
    <div class="mb-4"></div>
}
else
{
    foreach (var post in Model)
    {
        <article class="clearfix">
            <div class="d-block">
                <h4 class="post-title mb-3">
                    <a>
                        @post.Title
                    </a>
                </h4>
                <p class="post-content-abstract">@(post.ContentAbstract)</p>
            </div>
            <div class="float-right">
                <span class="d-inline-block mr-5">@post.CreationTime</span>
                <span>@post.CreatorName</span>
            </div>
        </article>
        <div class="mb-4 d-none d-md-block"></div>
        <hr class="d-none d-md-block" />
    }
}